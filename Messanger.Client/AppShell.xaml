<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Messanger.Client.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Messanger.Client"
    xmlns:pages="clr-namespace:Messanger.Client.Views"
    xmlns:vm="clr-namespace:Messanger.Client.ViewModels"
    Shell.NavBarIsVisible="False"
    Shell.NavBarHasShadow="False"
    Shell.FlyoutBehavior="Disabled">
    
    <Shell.BindingContext>
        <vm:AppShellViewModel />
    </Shell.BindingContext>

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate pages:PreloaderPage}"
        Route="PreloaderPage" />

</Shell>
